#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2 User groups
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            User groups list
          .panel-body
            .table-responsive
              %table.table.table-striped
                %thead
                  %tr
                    %th #
                    %th Name
                %tbody
                - @user_groups.each do |user_group|
                  %tr
                    %td= user_group.id
                    %td= user_group.name
                    %td= link_to 'Show', admin_user_group_path(user_group), class: 'btn btn-primary btn-xs'
                    %td= link_to 'Edit', edit_admin_user_group_path(user_group), class: 'btn btn-warning btn-xs'
                    %td= link_to 'Destroy', admin_user_group_path(user_group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' unless user_group.id == 1
            .row
              .col-sm-6
                = will_paginate @user_groups, renderer: BootstrapPagination::Rails, previous_label: 'Previous', next_label: 'Next', inner_window: 2
