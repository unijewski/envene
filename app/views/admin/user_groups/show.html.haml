#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2= page_header
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            Users in #{@user_group.first.group.name} group
          .panel-body
            .table-responsive
              %table.table.table-striped
                %thead
                  %tr
                    %th #
                    %th Gravatar
                    %th Username
                    %th E-mail
                %tbody
                - @user_group.each do |user|
                  %tr
                    %td= user.id
                    %td= gravatar_for(user, size: 20)
                    %td= user.username
                    %td= user.email
                    %td= link_to 'Show', admin_user_path(user), class: 'btn btn-primary btn-xs'
            .row
              .col-sm-6
                = will_paginate @user_group, renderer: BootstrapPagination::Rails, previous_label: 'Previous', next_label: 'Next', inner_window: 2
