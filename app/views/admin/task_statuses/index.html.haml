#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2 Task statuses
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            Task statuses list
          .panel-body
            .table-responsive
              %table.table.table-striped
                %thead
                  %tr
                    %th #
                    %th Name
                %tbody
                - @task_statuses.each do |task_status|
                  %tr
                    %td= task_status.id
                    %td= task_status.name
                    %td= link_to 'Show', admin_task_status_path(task_status), class: 'btn btn-primary btn-xs'
                    %td= link_to 'Edit', edit_admin_task_status_path(task_status), class: 'btn btn-warning btn-xs'
                    %td= link_to 'Destroy', admin_task_status_path(task_status), method: :delete, data: { confirm: 'Are you sure? This action will delete all tasks assigned to this status!' }, class: 'btn btn-danger btn-xs'
            .row
              .col-sm-6
                = will_paginate @task_statuses, renderer: BootstrapPagination::Rails, previous_label: 'Previous', next_label: 'Next', inner_window: 2
