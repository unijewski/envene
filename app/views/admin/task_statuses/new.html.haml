#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2 Task statuses
        %h5 To create a task status fill in the field
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            Create a new task status
          .panel-body
            .row
              .col-md-6
                = simple_form_for [:admin, @task_status] do |f|
                  = f.input :name
                  = f.button :submit, 'Create', class: 'btn btn-success'
