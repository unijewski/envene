#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2= t('task_priority_types')
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            = t('task_priority_type_tasks', task_priority_type: @task_priority_type.first.priority.name)
          .panel-body
            .table-responsive
              %table.table.table-striped
                %thead
                  %tr
                    %th #
                    %th= t('name')
                    %th= t('progres')
                    %th= t('status')
                    %th= t('author')
                %tbody
                - @task_priority_type.each do |task|
                  %tr
                    %td= task.id
                    %td= truncate(task.name, length: 60)
                    %td
                      .progress.progress-striped
                        .progress-bar.progress-bar-success{'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => "#{task.progress}", :role => 'progressbar', :style => "width: #{task.progress}%"}
                          %span.sr-only #{task.progress}% Complete (success)
                    %td= task.status.name
                    %td= task.author.username
                    %td= link_to t('show'), admin_task_path(task), class: 'btn btn-primary btn-xs'
            .row
              .col-sm-6
                = will_paginate @task_priority_type, renderer: BootstrapPagination::Rails, previous_label: t('previous_page'), next_label: t('next_page'), inner_window: 2
