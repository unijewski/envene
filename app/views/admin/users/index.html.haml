#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2= page_header
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            List
          .panel-body
            .row
              .col-md-12
                #dataTables-example_filter.dataTables_filter
                  = simple_form_for :user, url: admin_users_path, html: { method: :get, class: 'form-inline' } do |f|
                    = f.input :search, label: false, placeholder: 'Type an email or an username...', input_html: { size: 40 }
                    = f.button :submit, 'Search'
            %br
            .row
              .table-responsive
                %table.table.table-striped
                  %thead
                    %tr
                      %th #
                      %th Gravatar
                      %th Username
                      %th E-mail
                      %th Registered
                      %th Admin
                  %tbody
                  - @users.each do |user|
                    %tr
                      %td= user.id
                      %td= gravatar_for(user, size: 20)
                      %td= user.username
                      %td= user.email
                      %td= user.created_at.strftime('%Y/%m/%d %H:%M:%S')
                      %td= user.admin? ? 'Yes' : 'No'
                      %td= link_to 'Show', admin_user_path(user), class: 'btn btn-primary btn-xs'
                      %td= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-warning btn-xs'
                      %td= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure? This action will delete all tasks and posts assigned to this user!' }, class: 'btn btn-danger btn-xs'
            .row
              .col-sm-6
                = will_paginate @users, renderer: BootstrapPagination::Rails, previous_label: 'Previous', next_label: 'Next', inner_window: 2
