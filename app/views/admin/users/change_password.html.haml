#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2= t('users')
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            = t('change_password')
          .panel-body
            .row
              .col-md-6
                = simple_form_for(@user, url: { action: 'update_password' }) do |f|
                  = f.input :password
                  = f.input :password_confirmation
                  = f.button :submit, t('change'), class: 'btn btn-success'
