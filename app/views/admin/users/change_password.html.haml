#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2= page_header
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            Change your password
          .panel-body
            .row
              .col-md-6
                = simple_form_for(@user, url: { action: 'update_password' }) do |f|
                  = f.input :password
                  = f.input :password_confirmation
                  = f.button :submit, 'Update', class: 'btn btn-success'
