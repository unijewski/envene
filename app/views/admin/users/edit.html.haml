#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2= t('users')
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            = t('user_edit')
          .panel-body
            .row
              .col-md-6
                = simple_form_for [:admin, @user] do |f|
                  = f.input :username
                  = f.input :email
                  = f.input :group_id, collection: UserGroup.all.pluck(:name, :id), include_blank: false
                  = f.input :admin, as: :boolean
                  = f.button :submit, t('edit'), class: 'btn btn-success'
