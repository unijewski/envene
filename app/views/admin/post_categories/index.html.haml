#page-wrapper
  #page-inner
    .row
      .col-md-12
        %h2 Post categories
    %hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            Post categories list
          .panel-body
            .table-responsive
              %table.table.table-striped
                %thead
                  %tr
                    %th #
                    %th Name
                %tbody
                - @post_categories.each do |post_category|
                  %tr
                    %td= post_category.id
                    %td= post_category.name
                    %td= link_to 'Show', admin_post_category_path(post_category), class: 'btn btn-primary btn-xs'
                    %td= link_to 'Edit', edit_admin_post_category_path(post_category), class: 'btn btn-warning btn-xs'
                    %td= link_to 'Destroy', admin_post_category_path(post_category), method: :delete, data: { confirm: 'Are you sure? This action will delete all posts assigned to this category!' }, class: 'btn btn-danger btn-xs'
            .row
              .col-sm-6
                = will_paginate @post_categories, renderer: BootstrapPagination::Rails, previous_label: 'Previous', next_label: 'Next', inner_window: 2
