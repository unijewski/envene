.container
  .row.text-center
    .col-md-12
      %br
      %br
      %h2 Edit #{current_user.username}
      %h5 Envene
      %br
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
      .panel.panel-default
        .panel-body
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            %br
            .form-group
              .icon-addon
                %i.fa.fa-at
              = f.input :email, label: false, autofocus: true
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            .form-group
              .icon-addon
                %i.fa.fa-lock
              = f.input :password, label: false, placeholder: 'Password', hint: 'Leave blank if you don\'t want to change it', autocomplete: 'off'
            .form-group
              .icon-addon
                %i.fa.fa-lock
              = f.input :password_confirmation, label: false, placeholder: 'Password confirmation', autocomplete: 'off'
            .form-group
              .icon-addon
                %i.fa.fa-key
              = f.input :current_password, label: false, placeholder: 'Current password', hint: 'We need your current password to confirm your changes', autocomplete: 'off'
            = f.button :submit, 'Update', class: 'btn btn-success'
            %hr
            Unhappy?
            = link_to 'Cancel my account', registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
            %br
            %br
            = link_to "Back", :back, class: 'btn btn-warning'
