.container
  .row.text-center
    .col-md-12
      %br
      %br
      %h2 Sign up
      %h5 Envene
      %br
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
      .panel.panel-default
        .panel-heading
          %strong New user? Register yourself
        .panel-body
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            %br
            .form-group.input-group
              %span.input-group-addon
                %i.fa.fa-circle-o-notch
              / = f.input :nickname, label: false, placeholder: 'Your nickname'
            .form-group.input-group
              %span.input-group-addon
                %i.fa.fa-at
              = f.input :email, label: false, placeholder: 'Your e-mail'
            .form-group.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.input :password, label: false, autocomplete: 'off', placeholder: 'Type password'
            .form-group.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.input :password_confirmation, label: false, autocomplete: 'off', placeholder: 'Retype password'
            = f.button :submit, 'Register me', class: 'btn btn-success'
            %hr
            Already registered?
            = render 'devise/shared/links'
