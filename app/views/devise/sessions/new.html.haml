.container
  .row.text-center
    .col-md-12
      %br
      %br
      %h2 Log in
      %h5 Envene
      %br
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
      .panel.panel-default
        .panel-heading
          %strong Enter Details To Login
        .panel-body
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %br
            .form-group.input-group
              %span.input-group-addon
                %i.fa.fa-tag
              = f.email_field :email, autofocus: true, class: 'input form-control', placeholder: 'Your e-mail'
            .form-group.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.password_field :password, autocomplete: "off", class: 'input form-control', placeholder: 'Your password'
            .form-group
              - if devise_mapping.rememberable?
                %label.checkbox-inline
                  = f.check_box :remember_me, class: 'input'
                  Remember me
            = f.submit 'Log in', class: 'btn btn-primary'
            %hr
            = render "devise/shared/links"
