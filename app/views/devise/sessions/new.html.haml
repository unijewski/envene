.container
  .row.text-center
    .col-md-12
      %br
      %br
      %h2 Log in
      %h5 Envene
      %br
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
      .panel.panel-default
        .panel-heading
          %strong Enter details to login
        .panel-body
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %br
            .form-group
              .icon-addon
                %i.fa.fa-tag
              = f.input :email, label: false, autofocus: true, placeholder: 'Your e-mail'
            .form-group
              .icon-addon
                %i.fa.fa-lock
              = f.input :password, label: false, autocomplete: 'off', placeholder: 'Your password'
            .form-group
              - if devise_mapping.rememberable?
                = f.input :remember_me, as: :boolean, inline_label: 'Remember me'
            = f.button :submit, 'Log in', class: 'btn btn-primary'
            %hr
            = render 'devise/shared/links'
